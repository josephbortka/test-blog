<div class="container mt-5">
    <h1 class="text-center mb-4">Create a Blog Post</h1>
    <form action="/submit-blog" method="post">
      <!-- Blogpost Title -->
      <div class="mb-3 limit-text-width">
        <label for="blogpostTitle" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>

      <!-- Blogpost Body -->
      <div class="mb-3 limit-text-width">
        <label for="blogpostBody" class="form-label">Body</label>
        <textarea class="form-control" id="body" name="body" rows="5" required></textarea>
      </div>

      <!-- Username -->
      <div class="mb-3 limit-text-width">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="username">
      </div>

      <!-- Password -->
      <div class="mb-3 limit-text-width">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password">
      </div>

    <!-- Submit Button -->
    <div class="mb-3 limit-text-width">
    <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </form>
  </div>